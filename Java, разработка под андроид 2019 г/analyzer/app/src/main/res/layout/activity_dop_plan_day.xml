<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp">

        <EditText
            android:id="@+id/nomer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="№"
            android:inputType="number"
            android:maxLength="3"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:inputType="textPersonName"
            android:hint="Название"
            android:maxLength="15"/>

        <Button
            android:id="@+id/butDopPlan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12dp"
            android:text="Закрыть" />

    </LinearLayout>

    <EditText
        android:id="@+id/opisanie"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="50"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:hint="Введите описание запланированного дела"
        android:textIsSelectable="true"
        android:inputType="textMultiLine"
        android:autoLink="web" /> <!-- Баг непоявления клавиатуры -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/ves"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number"
        android:hint="Вес дела"/>

    <EditText
        android:id="@+id/srok"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="time"

        android:hint="(с) чч:мм"/>

    <EditText
        android:id="@+id/rasVrem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number"
        android:hint="Макс время"
        android:maxLength="3"/>
</LinearLayout>



</LinearLayout>